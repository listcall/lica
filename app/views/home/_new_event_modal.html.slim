/#myModal.modal.fade role="dialog"
  .modal-dialog

    <!-- Modal content-->
    .modal-content
      .modal-header
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">New Event</h4>
      .modal-body
        <p>Event Name</p>
        <p>Event Location</p>
      .modal-footer
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>


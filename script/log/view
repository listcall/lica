#!/usr/bin/env bash

# LOGVIEW CONSOLE

SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $SCRIPTDIR/../..

# call using devcon_msg "message text" $@
devcon_msg() 
{
  msg=$1
  if [ $# -gt 2 ] ; then
    echo "Usage: `basename $0` [<host>]\n  $msg\n  default host is <localhost>."
    exit
  fi 
}

# call using devcon_run 'script' $@
devcon_run() 
{
  server=$1
  cmd="script/tmux/console_base script/tmux/log_layout"
  if [ ! -z $server ] ; then
    cmd="ssh -t $server '$cmd'"
  fi
  echo "$cmd"
  eval "$cmd"
}

devcon_msg "shows ListCall production logs" $@
devcon_run $@

# -*- mode: ruby -*-
# vi: set ft=ruby :

before 'deploy:update', 'whenever:update'

namespace :whenever do
  desc "Update Crontab with Whenever"
  task :update do
    on roles(:all) do
      within current_path do
        execute :bundle, :exec, "whenever -f CronJobs --update-crontab"
      end
    end
  end
end

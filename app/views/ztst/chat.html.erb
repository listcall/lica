<% content_for :page_js do %>
  <script>
    <%= javascript_include_tag 'cable' %>
  </script>
<% end %>

<div class='container'>
  <%= render :partial => 'shared_nav' %>
</div>

<div class='container'>
  <div class="row">
    <div class="col-md-12">
      <div class="lobby-chat">
        <div id="chat-feed" class="log" data-chatroom="Lobby"></div>
        <div class="entry">
          <div class="type-area">
            <div class="username-input">
              <%= current_user.user_name %>:
            </div>
            <div class="user-input">
              <%= text_field_tag :message, nil, class: "form-control chat-input", maxlength: 140 %>
            </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>


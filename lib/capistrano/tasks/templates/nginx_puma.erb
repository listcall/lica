server {
  listen 80;

  # ----- required for ssl -----
  # listen 443 ssl;
  # ssl on;
  # ssl_certificate     <%= fetch(:deploy_to) %>/current/config/certs/STAR_smsoesb_net.pem;
  # ssl_certificate_key <%= fetch(:deploy_to) %>/current/config/certs/STAR_smsoesb_net.key;
  # ssl_session_timeout 5m;
  # ssl_protocols       SSLv2 SSLv3 TLSv1;
  # ssl_ciphers         HIGH:!aNULL:!MD5;
  # ssl_prefer_server_ciphers  on;
  # -----

  server_name ~^.*$;
  client_max_body_size 20M;
  root <%= fetch(:deploy_to) %>/current/public;
  if (-f $document_root/util/maintenance.html) {
    return 503;
  }
  error_page 404 /404.html;
  error_page 422 /422.html;
  error_page 500 502 504 /500.html;
  error_page 503 @503;
  location @503 {
    rewrite ^(.*)$ /util/maintenance.html break;
  }
  location ~ ^/(img|fonts|assets|system|icons|avatar|metrics)/ {
    expires max;
    gzip_static on;
    add_header ETag "";
    add_header Last-Modified "";
    add_header Cache-Control public;
    break;
  }
  location = /robots.txt { }
  location = /500.html   { }
  location = /422.html   { }
  location / {
    proxy_pass http://127.0.0.1:<%= fetch(:web_port) %>;
    proxy_set_header Host $host;
    proxy_intercept_errors on;
    # ----- required for ssl -----
    # proxy_set_header X-Forwarded-Proto https;
    # -----
  }
}


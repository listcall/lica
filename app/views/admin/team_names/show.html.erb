<% content_for :page_js do %>
  <%= javascript_include_tag 'admin/team_names/all_team_names' %>
<% end %>

<% content_for :admin_header do %>
    <%= admin_header :Lica_Team, :names %>
<% end %>

<% content_for :admin_body do %>
    <%= simple_form_for(@team, url: "/admin/team_names", html: {class: 'form-horizontal'} ) do |f| %>
      <%= f.hidden_field :teamid, value: current_team.id %>
      <%= f.input :name,
                  required: false,
                  hint: "Full team name (eg. 'Bay Area Mountain Rescue Unit')",
                  label: "Team Name"
      %>
      <%= f.input :acronym,
                  required: false,
                  hint: "Team acronym (short team name w/o spaces - eg. 'BAMRU')",
                  label: "Team Acronym"
      %>
      <%= f.input :logo_text,
                  required: false,
                  hint: "Appears on the left side of the header-nav",
                  label: "Logo Text"
      %>
      <%= f.input :subdomain,
                  required: false,
                  hint: "http://<b id='subDomDisplay'>subdomain</b>.#{current_team.org.domain}"
      %>
      <div class='form-actions'>
        <%= f.button :submit, "Update" %>
      </div>
    <% end %>

<% end %>

<%= render :partial => 'admin/admin_layout' %>

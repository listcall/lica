<%= javascript_include_tag "sessions/all_sessions" %>

<div class='container'>
  <div class="row">
    <div class="col-sm-offset-1">
      <h2>Please Log In</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-offset-1 col-sm-4">

      <%= simple_form_for(@user, url: sessions_path, html: {class: 'form-horizontal'}) do |f| %>
        <%= f.input :user_name, required: false, label: "Username or Email" %>
        <%= f.input :password,  required: false %>
        <%= f.input :remember_me, :label => false do %>
          <label>
          <span style='vertical-align: 2px; margin-right: 8px;'>Remember me?</span>
          <input id='user_remember_me' name='user[remember_me]' type='checkbox' value='1'/>
          </label>
        <% end %>
        <div class='form-actions'>
          <%= f.button :submit, "Log In" %>
          <div style='display: inline-block; float: right; padding-top: 8px;'>
            <small>
            <%= link_to "forgot your password?", '/password/forgot' %>
            </small>
          </div>
        </div>
      <% end %>


      </class>

    </div>

  </div>

</div>
<%= render :partial => 'wiki_header'  %>

<div class='container'>
  <div class='row wiki-title'>
    <div class='col-md-6'>
      <h2 style='margin: 0;'>Pages</h2>
    </div>
    <div class='col-md-6 text-right' style='padding-top: 12px;'>
      <a href='<%= @wiki_name %>/home'>Home</a> |
      <a href='<%= @wiki_name %>/new'>New</a>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <% @wiki_repos.pages.each do |page| %>
        <% unless page.name == "home" %>
        <a href="<%= @wiki_path %>/<%= page.name %>"><%= page.name.titleize %></a><br/>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
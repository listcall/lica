<%= render :partial => 'wiki_header', :locals => {:prefix => ""}  %>

<div class='container'>
  <div class='row wiki-title'>
    <div class='col-md-6'>
      <h2 style='margin: 0;'>New Page</h2>
    </div>
    <div class='col-md-6 text-right' style='padding-top: 12px;'>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row' style='margin-bottom: 40px;'>
    <div class='col-md-12'>
      <p style='height: 15px;'></p>
      <%= simple_form_for(@wiki_form, url: "#{@wiki_path}", html: {class: 'form-horizontal'}) do |f| %>
        <%= f.input  :name   , input_html: {class: 'input-block-level'}               %>
        <%= f.input  :content, input_html: {class: 'input-block-level', rows: 12}, :as => :text %>
        <%= f.input  :comment, input_html: {class: 'input-block-level'}               %>
        <div class='control-group'>
          <label class='control-label'></label>
          <div class='controls'>
            <%= f.button :submit, "Create" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
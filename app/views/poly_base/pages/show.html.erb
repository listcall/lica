<%= render :partial => 'wiki_header', :locals => {:prefix => ""} %>

<div class='container'>
  <div class='row wiki-title'>
    <div class='col-md-6'>
      <h2 style='margin: 0;'><%= @page_name.titleize %></h2>
    </div>
    <div class='col-md-6 text-right hidden-phone' style='padding-top: 12px;'>
      <a href='new'>New Page</a> |
      <a href='<%= @page_name %>/edit'>Edit Page</a> |
      <a href='<%= @page_name %>/printable' target='_blank'>Printable</a>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row' style='margin-bottom: 40px;'>
    <div class='col-md-12 wikiPage'>
      <%= raw @page_content %>
    </div>
  </div>
</div>
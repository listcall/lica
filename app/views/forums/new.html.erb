<% content_for :subhead do %>
  <div class='subhead'>
    <div class='container'>
      <div class='row'>
        <div class='col-md-6'>
          <b><%= current_team.name %> Forums</b>
        </div>
        <div class='col-md-6 text-right'>
          <small><%= link_to "Forum Index", "/forums" %></small>
          <%= member_help_button('forums') %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class='container'>

  <div class="row">
    <div class="col-md-12">
      <h3>Create New Forum</h3>
      <%= simple_form_for(@forum ) do |f| %>
          <%= f.hidden_field :team_id, value: current_team.id %>
          <%= f.input :type, collection: forum_types,
                      :checked => "FmDiscussion",
                      :as      => :radio_buttons,
                      :label   => "Forum Type"
          %><br/>
          <%= f.input :name,
                      required: false,
                      label: "Forum Name"
          %>
          <br/>
          <%= f.button :submit, "Create", :class => "btn" %>
          <%= link_to "Cancel", :back, :class => "btn ml-15" %>
      <% end %>
    </div>
  </div>

</div>
<br/>